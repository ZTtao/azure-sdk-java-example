    <storm.version>0.9.3.2.2.9.1-20</storm.version>
    <hadoop.version>2.6.0.2.2.9.1-20</hadoop.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

